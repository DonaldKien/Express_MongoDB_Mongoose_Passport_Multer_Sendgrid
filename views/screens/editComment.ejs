<%- include("../partials/header") %>

<div class="container">	
	<h1 class="text-center">Edit Comment</h1>

	<div style="width: 30%; margin:50px auto" class="mx-auto">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= foundComment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="Enter new comment..." value="<%= foundComment.text %>" name="comment[text]">
            </div>
			<div class="form-group">
				<button class="btn btn-primary btn-md btn-block">submit</button>
			</div>
		</form>	
		<a href="/campgrounds/<%= campground_id %>">Go Back</a>
	</div>
</div>

